<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="InwallShelfBase" ParentName="FurnitureBase" Abstract="True">
    <thingClass>Building_Storage</thingClass>
    <designationCategory>Furniture</designationCategory>
    <altitudeLayer>Building</altitudeLayer>
    <clearBuildingArea>false</clearBuildingArea>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <defaultPlacingRot>South</defaultPlacingRot>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <building>
      <preventDeteriorationInside>true</preventDeteriorationInside>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <surfaceType>Item</surfaceType>
  </ThingDef>
  <ThingDef ParentName="InwallShelfBase">
    <defName>InwallShelf_SingleShelf</defName>
    <label>Wall Single Shelf</label>
    <description>Single-tile shelf that can be installed on a walls</description>
    <graphicData>
      <texPath>UniversalRack/UniversalRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.76,1.76)</drawSize>
    </graphicData>
    <costStuffCount>15</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>600</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
  </ThingDef>
  <ThingDef ParentName="InwallShelfBase">
    <defName>InwallShelf_DoubleShelf</defName>
    <label>Wall Double Shelf</label>
    <description>Double-tile shelf that can be installed on a walls</description>
    <graphicData>
      <texPath>UniversalRack/UniversalRackBig</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.58,1.76)</drawSize>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>16</Mass>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(2,1)</size>
  </ThingDef>
</Defs>
