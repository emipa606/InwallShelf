<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="InwallShelfBase" ParentName="ShelfBase" Abstract="True">
    <clearBuildingArea>false</clearBuildingArea>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <building>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <canPlaceOverWall>true</canPlaceOverWall>
    </building>
  </ThingDef>
  <ThingDef ParentName="InwallShelfBase">
    <defName>InwallShelf_SingleShelf</defName>
    <label>Wall Single Shelf</label>
    <description>Single-tile shelf that can be installed on a walls</description>
    <graphicData>
      <texPath>UniversalRack/UniversalRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.76,1.76)</drawSize>
    </graphicData>
    <costStuffCount>15</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>600</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(1,1)</size>
  </ThingDef>
  <ThingDef ParentName="InwallShelfBase">
    <defName>InwallShelf_DoubleShelf</defName>
    <label>Wall Double Shelf</label>
    <description>Double-tile shelf that can be installed on a walls</description>
    <graphicData>
      <texPath>UniversalRack/UniversalRackBig</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.58,1.76)</drawSize>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>16</Mass>
      <WorkToBuild>1200</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <size>(2,1)</size>
  </ThingDef>
</Defs>
